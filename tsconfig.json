{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "window.React.createElement",
    "jsxFragmentFactory": "window.React.Fragment",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/__tests__"]
}